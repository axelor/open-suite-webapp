{
  "palette": {
    "blue": "#666CFF",
    "red": "#E04440",
    "yellow": "#FDB528",
    "cyan": "#26C6F9",
    "green": "#72E128",

    "black": "#333",

    "body_bg": "#31334D",
    "body_color": "#C7C8DC",

    "secondary_bg": "#30334E",
    "tertiary_bg": "#3F425C",

    "primary": "#666CFF",
    "secondary": "#6D788D"
  },
  "border": {
    "color": "rgba(234, 234, 255, 0.12)"
  },
  "typography": {
    "body": {
      "fontSize": "15px"
    }
  },
  "components": {
    "Shell": {
      "bg": "#292A41"
    },
    "Panel": {
      "header": {
        "bg": "#3A3E5B",
        "border": {
          "width": 0
        }
      },
      "title": {
        "padding": "0.25rem 0.5rem"
      },
      "bg": "#30334E"
    },
    "Dropdown": {
      "item_hover": {
        "bg": "rgba(234, 234, 255, 0.05)"
      },
      "item_active": {
        "bg": "primary",
        "color": "#fff"
      },
      "divider": {
        "bg": "rgba(234, 234, 255, 0.12)"
      }
    },
    "NavMenu": {
      "item": {
        "border": {
          "radius": "1rem"
        }
      },
      "item_hover": {
        "bg": "rgba(234, 234, 255, 0.05)"
      },
      "item_active": {
        "bg": "rgba(var(--bs-primary-rgb), 0.25)",
        "color": "white"
      },
      "icon": {
        "bg": "transparent"
      },
      "icon_hover": {
        "bg": "transparent"
      },
      "icon_active": {
        "color": "white"
      }
    },
    "NavTabs": {
      "item": {
        "padding": "0.25rem 0.5rem"
      },
      "text": {
        "transform": "none"
      },
      "icon": {
        "bg": "transparent"
      },
      "icon_hover": {
        "bg": "transparent"
      },
      "icon_active": {
        "bg": "transparent"
      }
    },
    "CommandBar": {
      "button": {
        "padding": "0.35rem 0.45rem"
      }
    },
    "Table": {
      "bg": "#292A41",
      "border": {
        "color": "rgba(234, 234, 255, 0.1)"
      },
      "header": {
        "bg": "#292A41"
      },
      "row_odd": {
        "bg": "rgba(102, 108, 255, 0.05)"
      },
      "row_hover": {
        "bg": "rgba(102, 108, 255, 0.16)"
      },
      "row_active": {
        "bg": "rgba(102, 108, 255, 0.16)"
      },
      "cell_active": {
        "bg": "rgba(102, 108, 255, 0.18)"
      },
      "cell": {
        "padding": "0.375rem 0.5rem"
      }
    },
    "Button": {
      "paddingX": "0.5rem",
      "paddingY": "0.25rem"
    },
    "Badge": {
      "padding": "0.25rem 0.5rem",
      "border": {
        "radius": "1rem"
      }
    },
    "Form": {
      "padding": "1rem",
      "gap": "0.5rem 0.75rem"
    },
    "Input": {
      "padding": "calc(0.25rem + 1px) 0 0.25rem 0",
      "focus": {
        "shadow": "none",
        "border_width": "0 0 1px 0"
      },
      "invalid_focus": {
        "shadow": "none",
        "border_width": "0 0 1px 0"
      },
      "placeholder": {
        "color": "var(--bs-tertiary-color)"
      },
      "invalid": {
        "border_width": "0 0 1px 0"
      },
      "border": {
        "radius": 0
      },
      "border_width": "0 0 1px 0"
    }
  }
}
